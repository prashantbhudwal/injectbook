{
  "name": "injectbook",
  "version": "0.2.0",
  "description": "Convert EPUB books into Codex-compatible agent skills",
  "bin": {
    "injectbook": "dist/src/cli.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json && node scripts/copy-assets.cjs && chmod +x dist/src/cli.js",
    "build:binary": "npm run build",
    "test": "npm run build && node --test dist/test/*.test.js",
    "check": "tsc --noEmit --project tsconfig.json"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "commander": "^14.0.1",
    "fast-xml-parser": "^5.3.1",
    "node-html-markdown": "^1.3.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}
